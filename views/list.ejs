                        <option value="Low">ðŸŸ¢Low</option>
                    </select>
                    <button type="submit">+</button>
                </form>

    </div>


    </div>
    <script>
        function validateForm() {
            const input = document.getElementById("inputField").value.trim();
            if (!input) {
                alert('Input cannot be empty!');
                return false;
            }
            return true;
        }
    </script>
</body>

</html>