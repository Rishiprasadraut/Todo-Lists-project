<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>Todo List</title>

</head>

<body>
    <div class="box">
        <h1>Todo List</h1>
    </div>
    <div class="box2">

        <% ejes.forEach(task=> { %>

            <div class="todo-item">
                <input class="checkbox" type="checkbox">
                <p
                    class="<%= task.priority === 'High' ? 'high-priority' : task.priority === 'Medium' ? 'medium-priority' : 'low-priority' %>">
                   
                    <%= task.task %>
                </p>

                <!--EDIT -->
                <form action="/edit/<%= task._id %>?_method=PUT" method="post" style="display:inline;">

                    <input type="text" id="editField" name="newTask" placeholder="Edit task">
                    
                    <button id="editButton" type="submit">Edit</button>
                
                </form>

                <!-- DELETE -->
                <form action="/delete/<%= task._id %>?_method=DELETE" method="post" style="display:inline;">
                
                    <button id="deleteButton" type="submit">Delete</button>
                
                </form>
            
            </div>
            
            <% }) %>
            
            <div class="todo-item">


                    <form action="/" method="post" onsubmit="return validateForm()">
            
                        <input type="text" id="inputField" name="ele1" placeholder="Enter the task">
            
                        <select name="priority">
            
                            <option value="High">ðŸ”´High</option>
            
                            <option value="Medium">ðŸŸ Medium</option>
            
                            <option value="Low">ðŸŸ¢Low</option>
            
                        </select>
            
                        <button id="addButton" type="submit">ADD</button>
            
                    </form>

                </div>

    </div>



    <script>
        function validateForm() {
            const input = document.getElementById("inputField").value.trim();
            if (!input) {
                alert('Input cannot be empty..');
                return false;
            }
            return true;
        }
    </script>
</body>

</html>