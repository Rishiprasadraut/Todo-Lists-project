            <%= ejes[i].task %>
        </p>

        <!-- EDIT (PUT) -->
        <form action="/edit/<%= i %>?_method=PUT" method="post" style="display:inline;">
            <input type="text" name="newTask" placeholder="Edit task">
            <button id="editButton" type="submit">Edit</button>
        </form>

        <!-- DELETE (DELETE) -->
        <form action="/delete/<%= i %>?_method=DELETE" method="post" style="display:inline;">
            <button id="deleteButton" type="submit">Delete</button>
        </form>
    </div>
<% } %>


